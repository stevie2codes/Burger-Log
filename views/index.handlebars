
<h1>Eat-Da-Burger</h1>
<ul class="burgerList">
    {{#each burger}}
        <li>
            <P>{{this.dataValues.burger_name}}</P>
           <button type="button" class="destroy" id="destroy" data-id="{{this.id}}">DELETE!</button>
</li>

       
    {{/each}}
</ul>
<div class="main">
<img class="burgerImg" src="/images/burger.png" alt="Picture of a big burger">
</div>

<form class="create-form">

  <div class="form-group">
    <label for="bu"></label>
    <textarea rows="4" cols="50" type="text" id="bu" name="burger_name" placeholder="Enter a Burger!">
    </textarea>
  </div>
</form>
<button class="add" type="click">Add burger</button>
<h4 class="toDo">Enter a burger you would like to eat</h4>