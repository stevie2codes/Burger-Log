
<div class="main">
    <img class="burgerImg" src="/images/burger.png" alt="Picture of a big burger">
</div>
<h1>Eat-Da-Burger</h1>
<ul class="burgerList">
    {{#each burger}}
    <li>
        <P>{{this.dataValues.burger_name}} {{this.dataValues.id}}</P>
        <button type="button" class="destroy" id="destroy" data-id="{{this.dataValues.id}}">DELETE!</button>

        <button type="button" class="devour" id="devour" data-id="{{this.dataValues.devour}}"
            data-eaten="{{devoured}}">Devour</button>
    </li>
    {{/each}}
</ul>

<ul class="devouredList">
    <ul>
  {{#each burger}}
    {{#if devoured}}
      {{this.dataValues.burger_name}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">
    <div class="form-group">
        <label for="bu"></label>
        <textarea  type="text" id="bu" name="burger_name" placeholder="Enter a Burger!">
    </textarea>
    </div>
</form>
<button class="add" type="click">SUBMIT</button>
<h4 class="toDo">Enter a burger you would like to eat</h4>